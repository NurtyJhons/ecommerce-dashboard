# =============================================
# CONFIGURAÇÕES DO PROJETO E-COMMERCE DASHBOARD
# =============================================

# Copie este arquivo para .env e configure suas variáveis

# =============================================
# DJANGO
# =============================================
SECRET_KEY=sua-chave-secreta-super-longa-aqui-123456789
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================
# DATABASE - SQLITE (DESENVOLVIMENTO)
# =============================================
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# =============================================
# DATABASE - POSTGRESQL (PRODUÇÃO)
# =============================================
# Descomente para usar PostgreSQL:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=ecommerce_dashboard
# DB_USER=postgres
# DB_PASSWORD=sua_senha_postgresql
# DB_HOST=localhost
# DB_PORT=5432

# =============================================
# EMAIL (OPCIONAL)
# =============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-app

# =============================================
# REDIS (CACHE - OPCIONAL)
# =============================================
REDIS_URL=redis://127.0.0.1:6379/1

# =============================================
# BACKUP
# =============================================
BACKUP_ENABLED=False